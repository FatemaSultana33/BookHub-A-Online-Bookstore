    <div class="main-agileits">
        <h2 class="sub-head">Sign Up</h2>
        <div class="sub-main">
            <form action="#" method="post">
                @*<input placeholder="First Name" name="Name" class="name" type="text" required="">*@
                @Html.EditorFor(model => model.UserFirstName, new { htmlAttributes = new { @placeholder = "First Name", @name = "Name", @class = "name", @type = "text", @required = "" } })
