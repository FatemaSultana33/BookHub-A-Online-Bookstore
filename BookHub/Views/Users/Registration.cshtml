                @*<input placeholder="Phone Number" name="Number" class="number" type="text" required="">*@
                @Html.EditorFor(model => model.UserPhoneNo, new { htmlAttributes = new { @placeholder = "Phone Number", @name = "Number", @class = "number", @type = "text", @required = "" } })
                <span class="icon3"><i class="fa fa-phone" aria-hidden="true"></i></span><br>
                @*<input placeholder="Email" name="mail" class="mail" type="text" required="">*@
                @Html.EditorFor(model => model.UserEmail, new { htmlAttributes = new { @placeholder = "Email", @name = "mail", @class = "mail", @type = "text", @required = "" } })
                <span class="icon4"><i class="fa fa-envelope" aria-hidden="true"></i></span><br>
                @*<input placeholder="Password" name="Password" class="pass" type="password" required="">*@
                @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @placeholder = "Password", @name = "Password", @class = "pass", @type = "password", @required = "" } })
                <span class="icon5"><i class="fa fa-unlock" aria-hidden="true"></i></span><br>

                <input type="submit" value="sign up">
            </form>
        </div>
        <div class="clear"></div>
    </div>
    <!--//main-->
    <!--footer-->
    <div class="footer-w3">
