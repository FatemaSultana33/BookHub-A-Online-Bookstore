                            <div class="twice">
                                @*<input type="text" class="form-control" name="w3lSubject" id="w3lSubject" placeholder="Subject"
            required="">*@
                                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @type = "text", @class = "form-control", @name = "w3lSubject", @id = "w3lSubject", @placeholder = "Subject", @required = "" } })
                            </div>
                            @*<textarea name="w3lMessage" class="form-control" id="w3lMessage" placeholder="Message"
