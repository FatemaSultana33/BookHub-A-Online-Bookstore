                            @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @name = "w3lMessage", @class="form-control", @id="w3lMessage", @placeholder="Message", @required="" } })
                            <button type="submit" class="btn btn-contact">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
